        <th>Email</th>
        <th>Location</th>
        <th>Website</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @Capproveds.each do |inc| %>
          <tr>
            <td><%= inc.name %></td>
            <td><%= inc.email %></td>
            <td><%= inc.location + ", " + inc.province %></td>
            <td><%= inc.website %></td>
            <td><%= link_to "View", inc %> | <%= link_to "Waitlist", { controller: "companies", action: "admincompanies", waitlist: true, user_id: inc.id }, remote: true %></td>
