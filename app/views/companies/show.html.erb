<div class="accommodate_alert"></div>
<div  class="profile_pic">
  <div align="center">
    <% if @company.picture?%>
        <%= image_tag @company.picture.url, class: "vert-align" %>
    <% else %>
        <%= image_tag "no_company_pic.png", class: "vert-align"  %>
    <% end %>
  </div>
</div>
<div align="center">
  <h1 style="padding-left: 10%">
    <%= @company.name %>
  </h1>
</div>
<div align="center">
  <div class="row">
    <div style="width: 80%" class="div-back-profile">
      <table>
        <tr>
          <td>
            <div class="profile_mar">
              <p>
                <strong>Contact: </strong><%= @company.email %>
              </p>
              <p>
                <strong>Website: </strong><%= @company.website %>
              </p>
              <p>
                <strong>Location: </strong><%= @company.location %>
              </p>
              <p>
                <strong>Employees: </strong><%= @company.size %>
              </p>
            </div>

            <br><br>
            <div class="blurb" style="margin-left: 50px">
              <p><strong>About:</strong></p>
              <%= simple_format(make_paragraph(@company.description, 55)) %>
            </div>
          </td>
          <td class="col-md-6">
            <div class="profile_title">
              <h3>Recent Activity</h3>
            </div>
            <br>
            <% unless @apps.nil? %>
                <% if @apps.size == 0 %>
                    <p align="center"> You have no activity to display. Start by posting jobs then finding professionals.</p>
                    <div align="center">
                      <div style="width: 30%;">
                        <%= button_to "Post Job", new_job_posting_path, class: "btn btn-primary", method: :get%>
                      </div>
                    </div>
                <% else %>
                    <% @apps.each do |app| %>
                        <table class="div-back-border">
                          <tr>

                            <td width="30%">
                              <p style="margin-left: 5px"><strong></strong><%= link_to app.job_posting.title, app.job_posting %></p>
                            </td>
                            <td width="30%">
                              <p><strong></strong><%= app.job_posting.location %></p>
                            </td>
                            <td width="30%">
                              <p><strong></strong><%= link_to User.find_by(id: app.user_id).name, User.find_by(id: app.user_id) %></p>
                            </td>
                          </tr>
                          <tr>
                            <td>
                              <div style="display: inline-block">
                                <p style="margin-left: 5px"><strong>Status: </strong></p>
                              </div>
                              <div style="display: inline-block" align="left">
                                <% if app.compAccept == false %>
                                    <%= form_tag url_for(:controller => 'applicants', :action => 'update'), :method => 'patch' do  %>
                                        <%= hidden_field_tag :app_id, app.id %>
                                        <%= submit_tag "Accept?", class: "btn btn-primary btn-sm" %>
                                    <% end %>
                                <% elsif app.userAccept == false %>
                                    <button class="btn btn-warning btn-sm disabled">Pending</button>
                                <% else %>
                                    <button class="btn btn-success btn-sm disabled">Matched</button>
                                <% end %>
                              </div>
                            </td>
                            <td  colspan="2" valign="bottom">
                              <p class="copyright text-muted small" align="left" style="margin-left: 30%"> Sent <%= time_ago_in_words(app.created_at) %> ago.</p>
                            </td>
                          </tr>
                        </table>
                        <br>
                    <% end %>
                <% end %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
