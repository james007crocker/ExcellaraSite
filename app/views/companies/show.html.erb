<h1 class="profile_title">
  <%= @company.name %>
</h1>
<table class="profile">
  <tr>
    <td>
      <div class="profile_mar">
        <p>
          <strong>Contact: </strong><%= @company.email %>
        </p>

        <p>
          <strong>Location: </strong><%= @company.location %>
        </p>
        <p>
          <strong>Employees: </strong><%= @company.size %>
        </p>
      </div>

      <br><br>
      <div class="blurb">
        <p><strong>About:</strong></p>
        <%=simple_format(word_wrap(@company.description, line_width: 70)) %>
      </div>
    </td>
    <td class="col-md-6">
      <br>
        <% unless @apps.nil? %>
            <% @apps.each do |app| %>
              <table class="border">
               <tr>
                 <td width="30%">
                   <p style="margin-left: 4%"><strong>Title: </strong><%= link_to app.job_posting.title, app.job_posting %></p>
                 </td>
                 <td width="30%">
                   <p><strong>Location: </strong><%= app.job_posting.location %></p>
                 </td>
                 <td width="30%">
                   <p><strong>Applicant: </strong><%= link_to User.find_by(id: app.user_id).name, User.find_by(id: app.user_id) %></p>
                 </td>
               </tr>
                <tr align="center">
                  <td colspan="2">
                      <div style="display: inline-block">
                        <p><strong>Status: </strong></p>
                      </div>
                      <div style="display: inline-block" align="left">
                        <% if app.compAccept == false %>
                            <%= form_tag url_for(:controller => 'applicants', :action => 'update'), :method => 'patch' do  %>
                                <%= hidden_field_tag :app_id, app.id %>
                                <%= submit_tag "Accept?", class: "btn btn-primary btn-sm" %>
                            <% end %>
                        <% elsif app.userAccept == false %>
                            <button class="btn btn-warning btn-sm disabled">Pending</button>
                        <% else %>
                            <button class="btn btn-success btn-sm disabled">Matched</button>
                        <% end %>
                      </div>
                  </td>
                  <td  valign="bottom">
                    <p class="copyright text-muted small" align="right" style="margin-right: 10%"> Sent <%= time_ago_in_words(app.created_at) %> ago.</p>
                  </td>
                </tr>
              </table>
                <br>
            <% end %>
        <% end %>
    </td>
  </tr>
</table>

