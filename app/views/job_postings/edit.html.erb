<h1 class="profile_title">Edit Posting</h1>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @job do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>

        <table width="100%">
          <tr>
            <td width="50%" style="padding-right: 10px">
              <%= f.label :location, "City" %>
              <%= f.select :location, getCities %>
            </td>
            <td width="25%" style="padding-left: 10px; padding-right: 10px">
              <%= f.label :province %>
              <%= f.select :province, getProvinces %>
            </td>
            <td width="25%" style="padding-left: 10px">
              <%= f.label :sector, "Job Sector" %>
              <%= f.select :sector, getType %>
            </td>
          </tr>
        </table>

        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control', :rows => "10" %>

        <%= f.submit "Save Changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>