<div class="accommodate_alert"></div>

<h1 class="profile_title">
  New Job Posting
</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@jobpostings) do |f| %>

        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :title, "Job Title" %>
        <%= f.text_field :title, class: 'form-control' %>

        <table width="100%">
          <tr>
            <td width="50%" style="margin-right: 10px">
              <%= f.label :location, "City" %>
              <%= f.select :location, getCities %>
            </td>
            <td width="25%" style="padding-left: 10px; padding-right: 10px">
              <%= f.label :province %>
              <%= f.select :province, getProvinces %>
            </td>
            <td width="25%" style="padding-left: 10px">
              <%= f.label :sector, "Job Sector" %>
              <%= f.select :sector, getType %>
            </td>
          </tr>
        </table>

        <%= f.label :description, "Job Description" %>
        <%= f.text_area :description, class: 'form-control', :rows => "10" %>

            <div align="center">
              <div class="profile_title">
                <%= f.submit "Post", class: "btn btn-primary" %>
              </div>
            </div>

    <% end %>
  </div>
</div>

