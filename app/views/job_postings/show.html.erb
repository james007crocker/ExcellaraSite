<div class="accommodate_alert"></div>

<div align="center">
  <div class="row">
    <div style="width: 80%; padding-top: 100px" >
    <% if !@jobposting.nil? %>
        <h3 class="profile_title">Company <%= @jobposting.company.name %> </h3>
        <div class="div-back-border">
            <table width = 80%>
              <tr>
                <td colspan="3">
                  <div>
                    <br>
                  </div>
                  <p style="display: inline; margin-right: 20%"><strong>Title: </strong><%= @jobposting.title %></p>
                  <p style="display: inline" align="right"><strong>Location: </strong><%= @jobposting.location %></p>
                  <div>
                    <br>
                  </div>
                </td>
              </tr>
              <tr>
                <td>
                  <p><strong>Description: </strong></p>
                  <div class="blurb">
                    <%= simple_format(word_wrap(@jobposting.description, line_width: 200)) %>
                  </div>
                </td>
              </tr>
            </table>
          <div align="center">
            <div class="row">
                <% unless current_company.nil? %>
                    <%= link_to "Remove", @jobposting, method: :delete %>
                <% end %>

                <div style="width: 30%;">

                  <% unless current_user.nil? || @jobposting.applicants.find_by(user_id: current_user.id)%>
                      <%= form_for(@jobposting.applicants.build) do |f| %>
                          <%= hidden_field_tag :job_id, @jobposting.id %>
                          <%= f.submit "Apply", class: "btn btn-primary" %>
                      <% end %>
                  <% end %>

                  <% if !current_user.nil? && state(@jobposting) == "Match" %>
                      <button class="btn btn-success btn-sm disabled">Matched</button>
                  <% elsif !current_user.nil? && state(@jobposting) == "Pending" %>
                      <button class="btn btn-warning btn-sm disabled">Pending</button>
                  <% end %>

                </div>
            </div>
          </div>

              <p class="copyright text-muted small" align="right" style="margin-right: 10%"> Posted <%= time_ago_in_words(@jobposting.created_at) %> ago.</p>
        </div>
    <% else %>
        <p>No job to show. </p>
    <% end %>
    </div>
  </div>
</div>