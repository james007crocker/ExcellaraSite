<div class="accommodate_alert"></div>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-centered tancolor" style="padding: 0">
      <div style="background-color: black">
        <p class="loginfont" style="padding-top: 10px; padding-bottom: 10px; padding-left: 30px">Log In</p>
      </div>
        <%= image_tag "wk4_wordmark_black.png", style: 'padding-left: 25px' %>
        <hr style="background-color: #000000; border: 0; height: 7px; width: 85%;">
          <div class="container" style="padding-left: 10%; padding-right: 10%">
            <div class="row">
              <div class="col-md-4" style="padding-bottom: 20px">
                <%= form_for(:session, url: login_path) do |f| %>
                    <table style="margin-top: 40px">
                      <tr>
                        <td>
                          <%= f.label :email, "Email: " %>
                        </td>
                        <td colspan="2">
                          <%= f.email_field :email, class: 'form-control addmargin2' %>
                        </td>
                      </tr>
                      <tr>
                        <td width="150px">
                          <%= f.label :password, "Password: " %>
                        </td>
                        <td width="300px">
                          <%= f.password_field :password, class: 'form-control addmargin2' %>
                        </td>
                      </tr>
                      <tr>
                        <td colspan="2" style="height: 10px; margin-top: 20px"></td>
                      </tr>
                      <tr>
                        <td>
                            <%= f.label :remember_me, class: "checkbox inline" do %>
                                <%= f.check_box :remember_me %>
                                <span>Remember me</span>
                            <% end %>
                        </td>
                        <td>
                          <%= link_to "(forgot password)", new_password_reset_path, class: "checkbox inline" %>
                        </td>
                      </tr>
                    </table>
                    <%= f.submit "Log in", class: "btn btn-primary button_width center-block" %>
                <% end %>
              </div>
              <div class="col-md-1" style="margin-right: 60px; margin-left: 60px">
                <h1 style="font-size: 6em">Or</h1>
              </div>
              <div class="col-md-3" style="text-align: center">
                <h3><strong><i>Professional?</i></strong> Log in with Linkedin:</h3>
                <%= link_to image_tag( "linkedin-circle.png", class: "img-circle div_button", width: 150, height: 150, style: 'display: inline-block'), '/auth/linkedin' %>
              </div>
            </div>
          </div>
          <div class="col-md-7 col-centered">

          </div>

          <div style="padding-top: 10px">

          </div>
          <hr style="background-color: #000000; border: 0; height: 7px; width: 85%;">



      <p style="text-align: right; padding-right: 20px">New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>
