<h1>Professionals</h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
      <% if user.admin == false && user.activated == true %>
      <li>
        <%= link_to user.name, user %>
        <%=  user.location %>
        <% end %>
        <% if current_company.nil? %>
            <%if current_user.admin? && !current_user?(user) %>
                <%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %>
            <% end%>
      </li>
      <% end %>
  <% end %>
</ul>

<%= will_paginate %>