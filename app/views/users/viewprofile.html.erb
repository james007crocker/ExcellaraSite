<div class="container-fluid  fixed" style="margin-top: 20px; z-index: 4">
  <div class="row">
    <div class="col-md-4 alertborder" style="float: left; margin-left: 5px">
      <table>
        <tr>
          <td>
            <p style="text-align: center">This is the appearance of your profile that is visible to companies.</p>
          </td>
        </tr>
        <tr>
          <td style="text-align: center">
            <%= link_to "Back to Profile", current_user, class: "btn btn-primary addmargin textwhite"%>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container-fluid" style="z-index: 3;">
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-10">
      <h1 class="userheaderfont2"><%= @user.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2" style="background-color: white">
    </div>
    <div class="col-md-10 nopadding" style="background-color: #EEE6DB">
      <table width="100%">
        <tr>
          <td width="160px">
            <% if @user.picture? %>
                <%= image_tag @user.picture.url, class: "img-responsive", width: 150, height: 150 if @user.picture? %>
            <% else %>
                <%= image_tag "no_profile.png", class: "img-responsive", width: 150, height: 150  %>
            <% end %>
          </td>
          <td style="position: relative">
            <table style="position: absolute; bottom: 0px; width: 100%">
              <tr>
                <td class="narrowfont">
                  <%= @user.profession.upcase %>
                </td>
              </tr>
              <tr>
                <td>
                  <p><%= @user.location.upcase %>, <%= @user.province.upcase %></p>
                </td>
              </tr>
              <tr>
                <td colspan="4">
                  <h5><%= pluralize(@user.years, 'YEAR').upcase + ' EXPERIENCE' %></h5>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-8">
      <table width="100%">
        <tr>
          <td style="padding-top: 15px">
          </td>
        </tr>
        <tr>
          <td>
            <p class="hoursperweek"><%= @user.name.split(' ')[0] + "'s Experience"  %></p>
          </td>
        </tr>
        <tr>
          <td>
            <div class="paragraph">
              <p class="two-col"><%= @user.experience %></p>
            </div>
          </td>
        </tr>
      </table>
    </div>
    </div>
  </div>
  <div class="row" style="padding-bottom: 10px">
    <div class="col-md-2">
    </div>
    <div class="col-md-4">
      <h5 class="headerfont">Skills</h5>
      <div  class="tancolor">
        <% @user.skill_list.each do |skill| %>
            <div class="tagcolor" style="margin: 5px; padding-left: 5px; padding-right: 5px; padding-top: 7px; display: inline-block">
              <p class="tagfont" style="color: white; vertical-align: middle"><%= skill.upcase %></p>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">
      <h5 class="headerfont">Looking For</h5>
      <div  class="tancolor">
        <% @user.looking_list.each do |skill| %>
            <div class="tagcolor" style="margin: 5px; padding-left: 5px; padding-right: 5px; padding-top: 7px; display: inline-block">
              <p class="tagfont" style="color: white; vertical-align: middle"><%= skill.upcase %></p>
            </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">

    </div>
    <div class="col-md-4">
      <h3 class="headerfont">Education</h3>
      <div  class="tancolor">
        <% @user.education_list.each do |skill| %>
            <div class="tagcolor" style="margin: 5px; padding-left: 5px; padding-right: 5px; padding-top: 7px; display: inline-block">
              <p class="tagfont" style="color: white; vertical-align: middle"><%= skill.upcase %></p>
            </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-4">

    </div>
  </div>

</div>